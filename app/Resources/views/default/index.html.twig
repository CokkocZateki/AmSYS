                                <td>{{sale.created|date("m/d/Y H:i")}}</td>
                                <td><a class="fake_link" data-type="P">{{sale.orderid}}</a></td>
                                <td>{{sale.net|number_format(0, '.', ',')}}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div><!-- /.box-body -->
